<h2>Create a New Painting</h2>

<%=  form_for @painting do |f|%>
<%= f.label :name %>
<%= f.text_field :name, :required => true %><br>

<%= f.label :price %>
<%= f.text_field :price, :required => true %><br>

<%= f.label :artist %>
<%= f.collection_select :artist_id, @artists, :id, :name %><br>

<%= f.label :gallery %>
<%= f.collection_select :gallery_id, @galleries, :id, :name %>

<%= f.submit %>
<% end %>
